<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>fixer</servlet-name>
        <servlet-class>web.ServlettJBDC</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fixer</servlet-name>
        <url-pattern>/fixer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getc</servlet-name>
        <servlet-class>web.GetName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getc</servlet-name>
        <url-pattern>/getc</url-pattern>
    </servlet-mapping>
<!--cookie相关训练-->
    <servlet>
        <servlet-name>ck</servlet-name>
        <servlet-class>web.Cookie01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ck</servlet-name>
        <url-pattern>/ck</url-pattern>
    </servlet-mapping>

    <!--获取cookie相关训练-->
    <servlet>
        <servlet-name>capck</servlet-name>
        <servlet-class>web.CaptureCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>capck</servlet-name>
        <url-pattern>/cck</url-pattern>
    </servlet-mapping>

    <!--获取中文cookie相关训练-->
    <servlet>
        <servlet-name>chinesecookie</servlet-name>
        <servlet-class>web.ChineseCookie</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>chinesecookie</servlet-name>
        <url-pattern>/cnck</url-pattern>
    </servlet-mapping>
</web-app>